// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Work {
  id             String   @id @default(cuid()) @map("_id")
  country        String
  name           String
  author         String
  genre          String
  direction      String
  theme          String
  idea           String
  mainCharacters String[]
}
