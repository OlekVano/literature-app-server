// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Work {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  country        String
  year           Int
  name           String
  author         String
  genre          String
  direction      String
  theme          String
  idea           String
  mainCharacters String[]
}

model Writer {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  country String
  name    String
  workIds String[]
}
